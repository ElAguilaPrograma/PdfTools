{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "binaries/PdfToolsApi",
          "sidecar": true
        }
      ]
    },
    "shell:allow-kill",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "$DOWNLOAD/**"
        }
      ]
    },
    "fs:default",
    "fs:allow-download-write"
  ]
}